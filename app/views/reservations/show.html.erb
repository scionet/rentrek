<div class="container-lg">
  <h1>Your Reservation Request</h1>
  <hr>
  <div class="card" style="width: 30rem;">
    <%# <img class="card-img-top" src="..." alt="Card image cap"> %>
    <div class="card-body">
      <h4 class="card-title"><%= @reservation.equipment.name %></h4>
      <p class="card-text"><%= @reservation.equipment.description.first(100) %></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">
        <p class="price-per-day-color">Price/day: <%= number_to_currency(@reservation.equipment.price_per_day) %></p>
        <p class="owner-color">Owner: <%= @reservation.equipment.user.email %></p>
      </li>
      <li class="list-group-item">
        <p>Renter: <%= @reservation.user.email %></p>
        <p>Start Date: <%= @reservation.start_date %></p>
        <p>End Date: <%= @reservation.end_date %></p>
      </li>
      <li class="list-group-item">
        <p>Reservation Status: <%= @reservation.status %></p>
      </li>
    </ul>
    <div class="card-body text-center">
      <a href="#" class="card-link">Edit Reservation</a>
      <a href="#" class="card-link">Cancel Reservation</a>
    </div>
  </div>
</div>
