<h1>This is where you see details of one reservation</h1>

<div>
  <p><%= @reservation.equipment.name %></p>
  <p><%= @reservation.start_date %> ~ <%= @reservation.end_date %></p>
  <p>rented by <%= @reservation.user.email %></p>
  <p>owned by <%= @reservation.equipment.user.email %></p>
</div>
<% if current_user == @reservation.user && @reservation.status == "Pending" %>
  <%= link_to "Edit", edit_reservation_path(@reservation) %>
  <%= link_to "Cancel", cancel_reservation_path(@reservation), method: :post %>
<% elsif current_user == @reservation.equipment.user %>
  <%= link_to "Accept", accept_reservation_path(@reservation), method: :post %>
  <%= link_to "Edit", edit_reservation_path(@reservation) %>
  <%= link_to "Reject", reject_reservation_path(@reservation), method: :post %>
<% end %>