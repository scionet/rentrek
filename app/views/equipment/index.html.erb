</div>
<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
    <%# debug @equipment %>
    <% @equipment.each do |equipment| %>
      <div class="p-2">
        <div class="card">
          <% if equipment.photos.attached? %>
            <%= cl_image_tag equipment.photos.first.key, height: '100px', width: '100px', style: "object-fit: cover"  %>
          <% end %>
          <%# cl_image_tag equipment.photos.first.key, height: '200px', width: '100%', style: "object-fit: cover" %>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <h5 class="card-title"><%= equipment.name %></h5>
              <p class="card-text">$<%= equipment.price_per_day %>/day</p>
            </div>
            <p class="card-text"><%= equipment.description %></p>
            <%= link_to "View more", equipment_path(equipment), class: 'btn btn-primary stretched-link' %>
            <%# <a href="#" class="btn btn-primary stretched-link">Go somewhere</a> %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%# A map showing the where the equipment is %>
  <div id="map"
    style="width: 100%; height: 600px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
