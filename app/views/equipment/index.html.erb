<div class="container text-center">
  <h1>Rentrek</h1>
  <hr>
</div>
<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
    <%# debug @equipment %>
    <% @equipment.each do |equipment| %>
      <div class="p-2">
        <div class="card overflow-auto">
          <%#= cl_image_tag equipment.photo.key, height: '200px', width: '100%', style: "object-fit: cover" %>
          <div class="p-0 border-bottom"
              style="height:200px; background-image: url(
                <%= cl_image_path(equipment.photo.key,
                :transformation => {:effect => "blur:1000"}) %>);
                background-size: cover;">
                <%# raise %>
                <div style="background-image: url(<%= cl_image_path(equipment.photo.key) %>);
                background-size: contain; width: 100%; height: 100%; background-position: center; background-repeat: no-repeat;"></div>
                <%#= cl_image_tag equipment.photo.key, height: 'auto', width: '', style: "object-fit: contain" %>
              </div>
          <div class="card-body">
            <h5 class="card-title"><%= equipment.name %></h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <%= link_to "View more", equipment_path(equipment), class: 'btn btn-primary stretched-link' %>
            <%# <a href="#" class="btn btn-primary stretched-link">Go somewhere</a> %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
